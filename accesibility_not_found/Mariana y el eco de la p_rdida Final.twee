.background-scene.red-wave-active {
  animation: redPulse 3s ease-in-out infinite;
  background-size: cover;
  transition: background 0.5s ease-in-out;
}

@keyframes redPulse {
  0% {
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.15) 20%, transparent 80%);
    transform: scale(1);
  }
  25% {
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.2) 30%, transparent 90%);
    transform: scale(1.01);
  }
  50% {
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.3) 40%, transparent 100%);
    transform: scale(1.015);
  }
  75% {
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.2) 30%, transparent 90%);
    transform: scale(1.01);
  }
  100% {
    background: radial-gradient(circle at center, rgba(255, 0, 0, 0.15) 20%, transparent 80%);
    transform: scale(1);
  }
}

