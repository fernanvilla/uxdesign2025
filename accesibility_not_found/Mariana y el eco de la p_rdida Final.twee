// Story JavaScript

window.updateCorduraBar = function () {
    setTimeout(() => {
        // 1) Asegurar que cordura no sea negativa
        if (State.variables.cordura < 0) {
            State.variables.cordura = 0;
        }

        const cordura = State.variables.cordura;
        const fill = document.getElementById("cordura-fill");

        // 2) Actualizar la barra de cordura
        if (fill) {
            fill.style.width = cordura + "%";
            fill.textContent = cordura + "%";

            if (cordura >= 70) {
                fill.style.backgroundColor = "#9BC09C"; // Verde
            } else if (cordura >= 40) {
                fill.style.backgroundColor = "#ff9800"; // Naranja
            } else {
                fill.style.backgroundColor = "#f44336"; // Rojo
            }
        }

        // 3) Añadir o quitar la clase dark-theme en <body>
        const umbralOscuro = 50;
        if (cordura < umbralOscuro) {
            document.body.classList.add("dark-theme");
        } else {
            document.body.classList.remove("dark-theme");
        }

        // 4) (Opcional) Mostrar botón fin de juego si cordura es 0
        const botonFin = document.getElementById("boton-fin-juego");
        if (botonFin) {
            if (cordura <= 0) {
                botonFin.style.display = "block";
                botonFin.innerHTML = '<button onclick="Engine.play(\'FinDelJuego\')" class="final-button">Finalizar juego</button>';
            } else {
                botonFin.style.display = "none";
            }
        }
      
      
      
const bgScene = document.querySelector(".background-scene");
if (bgScene) {
    if (cordura <= 20) {
        bgScene.classList.add("red-wave-active");
    } else {
        bgScene.classList.remove("red-wave-active");
    }
}
    }, 10);
};

// Macro para invocar la actualización desde un passage
Macro.add("actualizarCordura", {
    skipArgs: true,
    handler() {
        updateCorduraBar();
    }
});

// Ejecutar al mostrar cada passage
$(document).on('showpassage:after', function () {
    if (typeof State.variables.cordura !== 'undefined') {
        updateCorduraBar();
    }
});



$(document).on(':passagerender', function () {
    function estaEnPantalla(el) {
        const rect = el.getBoundingClientRect();
        return (
            rect.top < window.innerHeight && rect.bottom >= 0
        );
    }

    function activarCuandoVisible() {
        const selectores = ['.bloque-cordura', '.texto-impacto'];
        selectores.forEach(function (selector) {
            $(selector).each(function () {
                if (estaEnPantalla(this)) {
                    $(this).addClass('activa');
                }
            });
        });
    }

    activarCuandoVisible();
    $(window).on('scroll', activarCuandoVisible);
});

