.recuerdo-card {
  background: linear-gradient(270deg, #c6923c, #cf9533, #dc9e35, #f0aa35);
  background-attachment: fixed;
  background-size: cover;
  color: #e0d7f5;
  border-radius: 10px;
  padding: 0 5em;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  position: relative;
  overflow-y: auto;
  display:flex;
  width:100%;
  margin:0 auto;
  height:15rem;
  align-items:center;
  justify-content:space-evenly;
    /* glow base */
  --glow-color: rgba(240, 170, 53, 0.8);
  box-shadow:
    0 10px 20px rgba(0,0,0,0.3),
    0 0 20px var(--glow-color),
    0 0 40px var(--glow-color);


  /* animación */
  animation: glowPulse 3s ease-in-out;
  
}
@keyframes glowPulse {
  from {
    --glow-color: rgba(240, 170, 53, 0.4);
    box-shadow:
      0 10px 20px rgba(0,0,0,0.3),
      0 0 10px var(--glow-color),
      0 0 20px var(--glow-color);
  }
  to {
    --glow-color: rgba(240, 170, 53, 1);
    box-shadow:
      0 10px 20px rgba(0,0,0,0.3),
      0 0 30px var(--glow-color),
      0 0 60px var(--glow-color);
  }
}
