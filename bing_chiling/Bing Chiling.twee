document.addEventListener("keydown", function (e) {
    // Asegurarse que estamos en un pasaje válido
    const links = document.querySelectorAll("tw-link");
    if (links.length === 0) return;
    if (e.key === "1" && links[0]) {
        links[0].click();
    } else if (e.key === "2" && links[1]) {
        links[1].click();
    }
});
// detectar clicks en enlaces para narrador
document.addEventListener("click", function(e) {
    const enlace = e.target.closest("tw-link");
    if (!enlace) return;
    e.preventDefault(); // evitar la acción por defecto para controlar el flujo
    pararNarracion();
    // Ejecutar la acción del enlace manualmente (simulamos el click)
    // Dependiendo de cómo funcione tw-link, puede que tenga un método .click() que funcione bien
    enlace.click();
    if (narradorActivo) {
        // Dejamos que la navegación se procese, y narramos el nuevo contenido después
        setTimeout(() => activarNarrador(), 100);
    }
});
// NARRADOR
let narradorActivo = false;
let synth = window.speechSynthesis;
let utterance = null;
document.addEventListener("keydown", function (e) {
    const links = document.querySelectorAll("tw-link");
    if (links.length === 0) return;
    if (e.key === "1" && links[0]) {
        pararNarracion();
        links[0].click();
        if (narradorActivo) activarNarrador();
    } else if (e.key === "2" && links[1]) {
        pararNarracion();
        links[1].click();
        if (narradorActivo) activarNarrador();
    }
    if (e.key.toLowerCase() === "n") {
        narradorActivo = !narradorActivo;
        if (narradorActivo) {
            activarNarrador();
            console.log("Narrador activado");
        } else {
            desactivarNarrador();
            console.log("Narrador desactivado");
        }
    }
});
// Para cubrir clic con ratón en tw-link
document.addEventListener("click", function(e) {
    if (e.target.matches("tw-link")) {
        pararNarracion();
        if (narradorActivo) {
            // Pequeño delay para que el pasaje cambie antes de narrar
            setTimeout(() => activarNarrador(), 100);
        }
    }
});
function activarNarrador() {
    const contenido = document.querySelector('.passage') || document.body;
    if (!contenido) return;
    const texto = contenido.innerText.trim();
    if (!texto) return;
    utterance = new SpeechSynthesisUtterance(texto);
    utterance.lang = 'es-ES';
    synth.speak(utterance);
}
function desactivarNarrador() {
    if (synth.speaking) {
        synth.cancel();
    }
}
function pararNarracion() {
    if (synth.speaking) {
        synth.cancel();
    }
}

