:: StoryScript [script]
window.waitForVoices = function () {
    return new Promise((resolve) => {
        const voces = window.speechSynthesis.getVoices();
        if (voces.length !== 0) {
            State.variables.vocesInicializadas = true;
            return resolve(voces);
        }
        window.speechSynthesis.onvoiceschanged = () => {
            const voces = window.speechSynthesis.getVoices();
            State.variables.vocesInicializadas = true;
            resolve(voces);
        };
    });
};

