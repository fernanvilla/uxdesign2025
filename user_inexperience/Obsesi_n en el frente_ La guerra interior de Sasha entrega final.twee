    }
    
    if (event.key === "m" || event.key === "M") {
        event.preventDefault();
        window.toggleModoAudio();
        console.log("Modo audio alternado con tecla M");
    }
    
    if (event.key === "v" || event.key === "V") {
        event.preventDefault();
        window.mostrarVocesDisponibles();
    }
    
    if (event.key === "f" || event.key === "F") {
        event.preventDefault();
        if (window.seleccionarOpcionConTeclado(1)) {
            console.log("Opci√≥n 1 seleccionada con tecla F");
        }
    }
    
    if (event.key === "j" || event.key === "J") {
        event.preventDefault();
        if (window.seleccionarOpcionConTeclado(2)) {
            console.log("Opci√≥n 2 seleccionada con tecla J");
        }
    }
    
    // Tecla "A" para leer gu√≠a de accesibilidad
    if (event.key === "a" || event.key === "A") {
        event.preventDefault();
        window.leerGuiaAccesibilidad();
        console.log("Gu√≠a de accesibilidad le√≠da con tecla A");
    }
    
    // Tecla "H" mejorada para mostrar ayuda de opciones y leer en voz alta
    if ((event.key === "h" || event.key === "H") && !State.variables.teclaHPresionada) {
        event.preventDefault();
        State.variables.teclaHPresionada = true;
        const opcionesContainer = document.querySelector('.opciones-container');
        if (opcionesContainer) {
            window.mostrarAyudaOpciones();
            window.leerOpcionesDisponibles();
        } else {
            window.leerOpcionesNavegacion();
        }
    }
});

