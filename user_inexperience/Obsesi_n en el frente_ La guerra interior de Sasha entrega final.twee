// Funci√≥n modificada: Solo permitir selecci√≥n si las opciones est√°n visibles
window.seleccionarOpcionConTeclado = function(numeroOpcion) {
    const opcionesContainer = document.querySelector('.opciones-container');
    if (!opcionesContainer) return false;
    
    const opcionesVisibles = opcionesContainer.style.display !== 'none' && 
                            opcionesContainer.offsetParent !== null;
    
    if (!opcionesVisibles) {
        console.log("Las opciones no est√°n disponibles a√∫n. Completa todos los di√°logos primero.");
        return false;
    }
    
    const enlaces = opcionesContainer.querySelectorAll('a');
    if (enlaces.length === 0) return false;
    
    if (numeroOpcion < 1 || numeroOpcion > enlaces.length) return false;
    
    const enlaceSeleccionado = enlaces[numeroOpcion - 1];
    if (enlaceSeleccionado) {
        window.speechSynthesis.cancel();
        enlaceSeleccionado.click();
        return true;
    }
    return false;
};

// Funci√≥n mejorada para resaltar visualmente las opciones disponibles
window.mostrarAyudaOpciones = function() {
    const opcionesContainer = document.querySelector('.opciones-container');
    if (!opcionesContainer) return;
    
    const opcionesVisibles = opcionesContainer.style.display !== 'none' && 
                            opcionesContainer.offsetParent !== null;
    
    if (!opcionesVisibles) return;
    
    const indicadoresExistentes = opcionesContainer.querySelectorAll('.indicador-opcion');
    if (indicadoresExistentes.length > 0) {
        return;
    }
    
    const enlaces = opcionesContainer.querySelectorAll('a');
    enlaces.forEach((enlace, index) => {
        const indicador = document.createElement('span');
        indicador.className = 'indicador-opcion';
        indicador.style.cssText = `
            background: #ffff00;
            color: #000;
            padding: 2px 6px;
            border-radius: 3px;
            font-weight: bold;
            margin-left: 8px;
            animation: parpadeo 1s ease-in-out 3;
        `;
        indicador.textContent = `[${index === 0 ? 'F' : 'J'}]`;
        enlace.appendChild(indicador);
        
        setTimeout(() => {
            if (indicador.parentNode) {
                indicador.parentNode.removeChild(indicador);
            }
        }, 3000);
    });
};

// Funci√≥n modificada: Solo leer opciones si est√°n visibles
window.leerOpcionesDisponibles = function() {
    const opcionesContainer = document.querySelector('.opciones-container');
    if (!opcionesContainer) return;
    
    const opcionesVisibles = opcionesContainer.style.display !== 'none' && 
                            opcionesContainer.offsetParent !== null;
    
    if (!opcionesVisibles) {
        window.leerTextoConVoz("Debes completar todos los di√°logos antes de poder elegir una opci√≥n.", "Narrador");
        return;
    }
    
    const enlaces = opcionesContainer.querySelectorAll('a');
    if (enlaces.length === 0) return;
    
    let mensajeOpciones = "Opciones disponibles: ";
    
    enlaces.forEach((enlace, index) => {
        let textoOpcion = enlace.textContent.trim();
        textoOpcion = textoOpcion.replace(/\s*\[[FJ]\]\s*$/, '');
        
        const indicadoresExistentes = enlace.querySelectorAll('.indicador-opcion');
        if (indicadoresExistentes.length > 0) {
            textoOpcion = Array.from(enlace.childNodes)
                .filter(node => node.nodeType === Node.TEXT_NODE || (node.nodeType === Node.ELEMENT_NODE && !node.classList.contains('indicador-opcion')))
                .map(node => node.textContent)
                .join('')
                .trim();
        }
        
        const tecla = index === 0 ? "F" : "J";
        mensajeOpciones += `Opci√≥n ${index + 1}: ${textoOpcion}, tecla ${tecla}. `;
    });
    
    window.leerTextoConVoz(mensajeOpciones, "Narrador");
};

// NAVEGACI√ìN POR TECLADO CORREGIDA
$(document).on('keydown.navigation', function(event) {
    if (event.isDefaultPrevented()) return;

    if (event.key === "ArrowRight") {
        event.preventDefault();
        if (State.variables.dialogos && State.variables.dialogIndex < State.variables.dialogos.length - 1) {
            window.avanzarDialogo();
        } 
        else if (State.variables.dialogos && State.variables.dialogIndex === State.variables.dialogos.length - 1 && !State.variables.nextScene) {
            $('#opciones-escena').show();
            setTimeout(() => {
                window.mostrarAyudaOpciones();
            }, 500);
        } 
        else if (State.variables.nextScene) {
            window.siguienteEscena();
        }
    }

    if (event.key === "ArrowLeft") {
        event.preventDefault();
        if (State.variables.dialogos && State.variables.dialogIndex > 0) {
            window.retrocederDialogo();
        } 
        else if (State.variables.prevScene) {
            window.escenaAnterior();
        }
    }
});

// Funci√≥n cr√≠tica para cancelar audio en enlaces
$(document).on(':passagestart', function() {
    window.speechSynthesis.cancel();
    $('#opciones-escena').hide();
});

// Lectura autom√°tica si el modo est√° activado - MODIFICADA PARA MANEJAR ACCESIBILIDAD
$(document).on(':passageend', function () {
    setTimeout(function () {
        // Inicializar voces si es necesario
        if (window.speechSynthesis.getVoices().length === 0) {
            window.initializeVoices();
        }

        window.actualizarBotonModoAudio();

        const currentPassage = passage();
        console.log(`Pasaje actual: ${currentPassage}`);

        // Modificaci√≥n para el pasaje AccesibilidadGuia
        if (currentPassage === 'AccesibilidadGuia') {
            // Aseguramos que las voces se inicialicen primero
            window.waitForVoices().then(() => {
                console.log("Voces listas, simulando tecla A para leer gu√≠a de accesibilidad...");

                // Peque√±o retraso para asegurar que el pasaje est√© completamente cargado
                setTimeout(() => {
                    // Simular la tecla "a"
                    const evento = new KeyboardEvent("keydown", {
                        key: "a",
                        code: "KeyA",
                        keyCode: 65,
                        bubbles: true,
                        cancelable: true
                    });
                    document.dispatchEvent(evento);

                    // Tambi√©n llamar directamente a la funci√≥n de lectura de la gu√≠a
                    if (typeof window.leerGuiaAccesibilidad === "function") {
                        window.leerGuiaAccesibilidad();
                    }
                }, 300);
            });

            return; // Importante: evitar que se lea la escena autom√°ticamente
        }

        if (!State.variables.audioAutomatico) return;

        window.leerEscenaActual();
    }, 100);
});


// Teclas de navegaci√≥n y funciones especiales - MEJORADO
$(document).on('keydown.global', function(event) {
    if (event.key === "l" || event.key === "L") {
