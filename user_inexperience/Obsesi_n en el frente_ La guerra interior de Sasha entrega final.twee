// Funci√≥n para inicializar voces disponibles - MEJORADA
window.initializeVoices = function() {
    const voices = window.speechSynthesis.getVoices();
    if (voices.length === 0) return false;
    
    // Buscar voces en espa√±ol
    const spanishVoices = voices.filter(voice => 
        voice.lang.includes('es') || voice.name.toLowerCase().includes('spanish')
    );
    
    // Si no hay voces en espa√±ol, usar las disponibles
    const availableVoices = spanishVoices.length > 0 ? spanishVoices : voices;
    
    // Asignar voces por personaje
    if (availableVoices.length >= 3) {
        // Si hay suficientes voces, asignar diferentes
        State.variables.voicesConfig["Narrador"].voiceName = availableVoices[0].name;
        State.variables.voicesConfig["Sasha"].voiceName = availableVoices[1].name;
        State.variables.voicesConfig["Soldado"].voiceName = availableVoices[2].name;
    } else if (availableVoices.length >= 2) {
        // Si hay 2 voces, usar una para narrador y otra alternando
        State.variables.voicesConfig["Narrador"].voiceName = availableVoices[0].name;
        State.variables.voicesConfig["Sasha"].voiceName = availableVoices[1].name;
        State.variables.voicesConfig["Soldado"].voiceName = availableVoices[0].name;
    } else if (availableVoices.length === 1) {
        // Si solo hay una voz, usar par√°metros diferentes para diferenciar
        const voiceName = availableVoices[0].name;
        State.variables.voicesConfig["Narrador"].voiceName = voiceName;
        State.variables.voicesConfig["Sasha"].voiceName = voiceName;
        State.variables.voicesConfig["Soldado"].voiceName = voiceName;
    } else {
        console.warn("No hay voces disponibles. La lectura de texto no funcionar√°.");
        return false;
    }
    
    State.variables.vocesInicializadas = true;
    console.log("Voces inicializadas correctamente");
    return true;
};

// Funci√≥n para esperar a que las voces est√©n disponibles - NUEVA
window.waitForVoices = function() {
    return new Promise((resolve) => {
        if (State.variables.vocesInicializadas) {
            resolve(true);
            return;
        }
        
        const checkVoices = () => {
            if (window.initializeVoices()) {
                resolve(true);
            } else {
                setTimeout(checkVoices, 100);
            }
        };
        
        checkVoices();
    });
};

// Funci√≥n mejorada para leer texto con voz espec√≠fica del personaje
window.leerTextoConVoz = function(texto, personaje = "Narrador") {
    if (!window.speechSynthesis) return;
    
    // Cancelar cualquier lectura anterior
    window.speechSynthesis.cancel();
    
    // Inicializar voces si no est√°n configuradas o si la voz asignada es nula
    if (!State.variables.voicesConfig[personaje].voiceName) {
        if (!window.initializeVoices()) {
            // Si no se pueden inicializar, usar configuraci√≥n b√°sica
            window.leerTexto(texto);
            return;
        }
    }
    
    const config = State.variables.voicesConfig[personaje] || State.variables.voicesConfig["Narrador"];
    const utterance = new SpeechSynthesisUtterance(texto);
    
    // Configurar la voz
    utterance.lang = config.lang;
    utterance.rate = config.rate;
    utterance.pitch = config.pitch;
    utterance.volume = config.volume;
    
    // Buscar y asignar la voz espec√≠fica
    const voices = window.speechSynthesis.getVoices();
    const selectedVoice = voices.find(voice => voice.name === config.voiceName);
    if (selectedVoice) {
        utterance.voice = selectedVoice;
    }
    
    window.speechSynthesis.speak(utterance);
};

// Funci√≥n original mantenida para compatibilidad
window.leerTexto = function(texto) {
    if (!window.speechSynthesis) return;
    window.speechSynthesis.cancel();
    const utterance = new SpeechSynthesisUtterance(texto);
    utterance.lang = "es-ES";
    utterance.rate = 1;
    window.speechSynthesis.speak(utterance);
};

window.resetDialogState = function() {
    State.variables.dialogos = null;
    State.variables.dialogIndex = 0;
    $('#dialogo').empty();
    window.speechSynthesis.cancel();
};

window.cleanupNavigation = function() {
    $(document).off('keydown.navigation');
    $(document).off('keydown.dialogos');
    $(document).off('keydown.global');
    $(document).off('keyup.global');
};

// Funci√≥n mejorada para leer escena actual CON opciones de navegaci√≥n
window.leerEscenaActual = function () {
    // Cancelar cualquier audio anterior antes de leer la nueva escena
    window.speechSynthesis.cancel();
    
    // Si hay di√°logos activos, leer con la voz del personaje actual
    if (State.variables.dialogos && State.variables.dialogos.length > 0) {
        const dialogoActual = State.variables.dialogos[State.variables.dialogIndex];
        if (dialogoActual && dialogoActual.texto) {
            // Leer el di√°logo actual
            const utterance = new SpeechSynthesisUtterance(dialogoActual.texto);
            const config = State.variables.voicesConfig[dialogoActual.nombre] || State.variables.voicesConfig["Narrador"];
            
            utterance.lang = config.lang;
            utterance.rate = config.rate;
            utterance.pitch = config.pitch;
            utterance.volume = config.volume;
            
            const voices = window.speechSynthesis.getVoices();
            const selectedVoice = voices.find(voice => voice.name === config.voiceName);
            if (selectedVoice) {
                utterance.voice = selectedVoice;
            }
            
            // Cuando termine de leer el di√°logo, leer las opciones de navegaci√≥n
            utterance.onend = function() {
                setTimeout(() => {
                    window.leerOpcionesNavegacion();
                }, 500);
            };
            
            window.speechSynthesis.speak(utterance);
            return;
        }
    }
    
    // Si no hay di√°logos, usar voz del narrador para el texto del contenedor principal
    const texto = document.getElementById('dialogo')?.innerText?.trim();
    if (texto) {
        const utterance = new SpeechSynthesisUtterance(texto);
        const config = State.variables.voicesConfig["Narrador"];
        
        utterance.lang = config.lang;
        utterance.rate = config.rate;
        utterance.pitch = config.pitch;
        utterance.volume = config.volume;
        
        const voices = window.speechSynthesis.getVoices();
        const selectedVoice = voices.find(voice => voice.name === config.voiceName);
        if (selectedVoice) {
            utterance.voice = selectedVoice;
        }
        
        // Cuando termine de leer el texto, leer las opciones de navegaci√≥n
        utterance.onend = function() {
            setTimeout(() => {
                window.leerOpcionesNavegacion();
            }, 500);
        };
        
        window.speechSynthesis.speak(utterance);
    }
};

// Nueva funci√≥n para leer opciones de navegaci√≥n disponibles
window.leerOpcionesNavegacion = function() {
    let opcionesNavegacion = [];
    
    // Verificar si hay opciones de escena (elecciones)
    const opcionesContainer = document.querySelector('.opciones-container');
    if (opcionesContainer && opcionesContainer.style.display !== 'none' && opcionesContainer.offsetParent !== null) {
        // Si hay opciones de elecci√≥n disponibles, leer esas
        window.leerOpcionesDisponibles();
        return;
    }
    
    // Si hay di√°logos y no estamos en el √∫ltimo
    if (State.variables.dialogos && State.variables.dialogIndex < State.variables.dialogos.length - 1) {
        opcionesNavegacion.push("Avanzar al siguiente di√°logo con flecha derecha");
        if (State.variables.dialogIndex === 0) {
            opcionesNavegacion.push("Retroceder a la escena anterior con flecha izquierda");
        }
        if (State.variables.dialogIndex > 0) {
            opcionesNavegacion.push("Retroceder al di√°logo anterior con flecha izquierda");
        }
    } else if (State.variables.dialogos && State.variables.dialogIndex === State.variables.dialogos.length - 1) {
        if (State.variables.nextScene) {
            opcionesNavegacion.push("Avanzar a la siguiente escena con flecha derecha");
        }
        if (State.variables.dialogIndex > 0) {
            opcionesNavegacion.push("Retroceder al di√°logo anterior con flecha izquierda");
        } else if (State.variables.prevScene) {
            opcionesNavegacion.push("Retroceder a la escena anterior con flecha izquierda");
        }
    } else {
        if (State.variables.nextScene) {
            opcionesNavegacion.push("Avanzar a la siguiente escena con flecha derecha");
        }
        if (State.variables.prevScene) {
            opcionesNavegacion.push("Retroceder a la escena anterior con flecha izquierda");
        }
    }
    
    // Construir y leer mensaje de navegaci√≥n
    if (opcionesNavegacion.length > 0) {
        let mensajeNavegacion = "Opciones de navegaci√≥n: " + opcionesNavegacion.join(", ") + ".";
        window.leerTextoConVoz(mensajeNavegacion, "Narrador");
    }
};

window.toggleModoAudio = function () {
    State.variables.audioAutomatico = !State.variables.audioAutomatico;
    window.actualizarBotonModoAudio();
    if (State.variables.audioAutomatico) {
        window.leerEscenaActual();
    } else {
        window.speechSynthesis.cancel();
    }
};

window.actualizarBotonModoAudio = function () {
    const btn = document.getElementById('boton-modo-audio');
    if (!btn) return;
    if (State.variables.audioAutomatico) {
        btn.innerText = "üîà Modo Audio Activado (M)";
        btn.classList.add("activo");
    } else {
        btn.innerText = "üîá Activar Modo Audio (M)";
        btn.classList.remove("activo");
    }
};


// Funci√≥n modificada para avanzar di√°logo CON lectura autom√°tica de navegaci√≥n
window.avanzarDialogo = function() {
    window.speechSynthesis.cancel();
    
    if (State.variables.dialogos && State.variables.dialogIndex < State.variables.dialogos.length - 1) {
        State.variables.dialogIndex += 1;
        $('#dialogo').empty().wiki('<<include "MostrarDialogo">>');
        const dialogoActual = State.variables.dialogos[State.variables.dialogIndex];
        if (dialogoActual?.texto && State.variables.audioAutomatico) {
            setTimeout(() => {
                const utterance = new SpeechSynthesisUtterance(dialogoActual.texto);
                const config = State.variables.voicesConfig[dialogoActual.nombre] || State.variables.voicesConfig["Narrador"];
                
                utterance.lang = config.lang;
                utterance.rate = config.rate;
                utterance.pitch = config.pitch;
                utterance.volume = config.volume;
                
                const voices = window.speechSynthesis.getVoices();
                const selectedVoice = voices.find(voice => voice.name === config.voiceName);
                if (selectedVoice) {
                    utterance.voice = selectedVoice;
                }
                
                utterance.onend = function() {
                    setTimeout(() => {
                        window.leerOpcionesNavegacion();
                    }, 500);
                };
                
                window.speechSynthesis.speak(utterance);
            }, 50);
        }
        
        if (State.variables.dialogIndex === State.variables.dialogos.length - 1 && !State.variables.nextScene) {
            $('#opciones-escena').show();
            setTimeout(() => {
                window.mostrarAyudaOpciones();
            }, 500);
        }
    }
};

// Funci√≥n CORREGIDA para retroceder di√°logo CON navegaci√≥n a escena anterior
window.retrocederDialogo = function() {
    window.speechSynthesis.cancel();
    
    if (State.variables.dialogos && State.variables.dialogIndex > 0) {
        State.variables.dialogIndex -= 1;
        $('#dialogo').empty().wiki('<<include "MostrarDialogo">>');
        const dialogoActual = State.variables.dialogos[State.variables.dialogIndex];
        if (dialogoActual?.texto && State.variables.audioAutomatico) {
            setTimeout(() => {
                const utterance = new SpeechSynthesisUtterance(dialogoActual.texto);
                const config = State.variables.voicesConfig[dialogoActual.nombre] || State.variables.voicesConfig["Narrador"];
                
                utterance.lang = config.lang;
                utterance.rate = config.rate;
                utterance.pitch = config.pitch;
                utterance.volume = config.volume;
                
                const voices = window.speechSynthesis.getVoices();
                const selectedVoice = voices.find(voice => voice.name === config.voiceName);
                if (selectedVoice) {
                    utterance.voice = selectedVoice;
                }
                
                utterance.onend = function() {
                    setTimeout(() => {
                        window.leerOpcionesNavegacion();
                    }, 500);
                };
                
                window.speechSynthesis.speak(utterance);
            }, 50);
        }
        
        if (State.variables.dialogIndex < State.variables.dialogos.length - 1) {
            $('#opciones-escena').hide();
        }
    } else if (State.variables.prevScene) {
        window.escenaAnterior();
    }
};

window.siguienteEscena = function() {
    if (State.variables.nextScene) {
        window.speechSynthesis.cancel();
        window.resetDialogState();
        Engine.play(State.variables.nextScene);
    }
};

window.escenaAnterior = function() {
    if (State.variables.prevScene) {
        window.speechSynthesis.cancel();
        State.variables.regresandoDeEscena = true;
        State.variables.dialogos = null;
        State.variables.dialogIndex = 0;
        $('#dialogo').empty();
        Engine.play(State.variables.prevScene);
    }
};

