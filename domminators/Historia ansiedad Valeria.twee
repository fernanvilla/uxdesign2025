(function() {
  'use strict';
  
  // Sistema de narraci√≥n global
  window.NarradorGlobal = {
    activo: false,
    
    // Funci√≥n para extraer texto del pasaje actual
    extraerTextoDelPasaje: function() {
      let texto = "";
      
      // Obtener todos los elementos de texto visible
      const elementos = document.querySelectorAll('p, h1, h2, h3, h4, h5, h6, div, span');
      
      elementos.forEach(function(elemento) {
        // Evitar scripts, estilos y el indicador
        if (elemento.tagName.toLowerCase() === 'script' || 
            elemento.tagName.toLowerCase() === 'style' ||
            elemento.id === 'indicador-narracion') {
          return;
        }
        
        // Solo texto directo, sin hijos
        if (elemento.children.length === 0) {
          const textoElemento = elemento.textContent.trim();
          if (textoElemento && textoElemento.length > 3) {
            texto += textoElemento + ". ";
          }
        }
      });
      
      // Limpiar texto
      texto = texto.replace(/\s+/g, ' ')
                  .replace(/\[[\d\]]/g, '') // Remover n√∫meros de opciones
                  .trim();
      
      // Si no hay suficiente texto, usar m√©todo alternativo
      if (texto.length < 50) {
        const body = document.body;
        if (body) {
          texto = body.textContent
                     .replace(/\s+/g, ' ')
                     .replace(/\[[\d\]]/g, '')
                     .trim();
        }
      }
      
      return texto;
    },
    
    // Iniciar narraci√≥n
    iniciarNarracion: function() {
      // Detener cualquier narraci√≥n anterior
      if (window.speechSynthesis) {
        window.speechSynthesis.cancel();
      }
      
      const textoANarrar = this.extraerTextoDelPasaje();
      
      if (!textoANarrar || textoANarrar.length < 10) {
        console.log("No se encontr√≥ texto suficiente para narrar");
        return;
      }
      
      if (window.speechSynthesis) {
        const narrador = new SpeechSynthesisUtterance(textoANarrar);
        narrador.lang = "es-ES";
        narrador.rate = 0.9;
        narrador.pitch = 1;
        narrador.volume = 0.8;
        
        // Mostrar indicador
        const indicador = document.getElementById('indicador-narracion');
        if (indicador) {
          indicador.classList.add('activo');
        }
        this.activo = true;
        
        // Eventos del narrador
        const self = this;
        narrador.onend = function() {
          if (indicador) {
            indicador.classList.remove('activo');
          }
          self.activo = false;
        };
        
        narrador.onerror = function() {
          if (indicador) {
            indicador.classList.remove('activo');
          }
          self.activo = false;
        };
        
        window.speechSynthesis.speak(narrador);
      }
    },
    
    // Detener narraci√≥n
    detenerNarracion: function() {
      if (window.speechSynthesis) {
        window.speechSynthesis.cancel();
      }
      const indicador = document.getElementById('indicador-narracion');
      if (indicador) {
        indicador.classList.remove('activo');
      }
      this.activo = false;
    },
    
    // Alternar narraci√≥n
    alternarNarracion: function() {
      if (this.activo || (window.speechSynthesis && window.speechSynthesis.speaking)) {
        this.detenerNarracion();
      } else {
        this.iniciarNarracion();
      }
    }
  };
  
  // Funci√≥n para numerar opciones
  function numerarOpciones() {
    const opciones = document.querySelectorAll('a[data-passage]');
    opciones.forEach(function(opcion, index) {
      const numeroOpcion = index + 1;
      
      // Verificar si ya tiene n√∫mero
      const anterior = opcion.previousElementSibling;
      if (!anterior || !anterior.classList.contains('numero-opcion')) {
        const spanNumero = document.createElement('span');
        spanNumero.className = 'numero-opcion';
        spanNumero.textContent = '[' + numeroOpcion + '] ';
        opcion.parentNode.insertBefore(spanNumero, opcion);
      }
    });
  }
  
  // Funci√≥n para manejar el teclado
  function manejarTeclado(evento) {
    const tecla = evento.key;
    
    // ESPACIO para narraci√≥n
    if (tecla === ' ' || tecla === 'Spacebar') {
      evento.preventDefault();
      if (window.NarradorGlobal) {
        window.NarradorGlobal.alternarNarracion();
      }
      return;
    }
    
    // N√∫meros para navegaci√≥n
    if (tecla >= '1' && tecla <= '9') {
      const numeroOpcion = parseInt(tecla);
      const opciones = document.querySelectorAll('a[data-passage]');
      const opcionSeleccionada = opciones[numeroOpcion - 1];
      
      if (opcionSeleccionada) {
        // Detener narraci√≥n antes de navegar
        if (window.NarradorGlobal) {
          window.NarradorGlobal.detenerNarracion();
        }
        
        // Efecto visual
        opciones.forEach(function(opcion) {
          opcion.classList.remove('opcion-seleccionada');
        });
        opcionSeleccionada.classList.add('opcion-seleccionada');
        
        // Navegar despu√©s de un breve delay
        setTimeout(function() {
          opcionSeleccionada.click();
        }, 300);
      }
    }
  }
  
  // Inicializar cuando el DOM est√© listo
  function inicializar() {
    // Agregar event listener para teclado
    document.addEventListener('keydown', manejarTeclado);
    
    // Numerar opciones
    numerarOpciones();
    
    // Observar cambios en el DOM
    if (window.MutationObserver) {
      const observer = new MutationObserver(function() {
        setTimeout(numerarOpciones, 100);
      });
      
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
    }
    
    // Detener narraci√≥n al hacer clic en opciones
    document.addEventListener('click', function(evento) {
      if (evento.target.matches('a[data-passage]')) {
        if (window.NarradorGlobal) {
          window.NarradorGlobal.detenerNarracion();
        }
      }
    });
  }
  
  // Inicializar cuando el DOM est√© listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', inicializar);
  } else {
    inicializar();
  }
  
})();
</script>


