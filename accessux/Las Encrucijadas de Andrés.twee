$('#ui-bar').remove();
$(document.head).find('#style-ui-bar').remove();

var audioFondo = null;
var audioAmbiente = null;
var musicaActiva = true;

function crearBotonMusica() {
	// Eliminar si ya existe (por seguridad)
	$("#btn-musica").remove();

	// ✅ Solo mostrar si al menos uno de los audios existe
	if (!audioFondo && !audioAmbiente) return;

	const btn = document.createElement("button");
	btn.id = "btn-musica";

	// Verificar si alguno está silenciado
	const silenciada = (audioFondo?.muted || audioAmbiente?.muted || false);
	musicaActiva = !silenciada;

	// Configurar ícono y accesibilidad
	btn.innerHTML = silenciada ? "🔇" : "🔊";
	btn.setAttribute("aria-label", silenciada ? "Activar música" : "Silenciar música");
	btn.setAttribute("title", silenciada ? "Activar música" : "Silenciar música");

	// Estilos
	btn.style.position = "fixed";
	btn.style.bottom = "1em";
	btn.style.right = "1em";
	btn.style.zIndex = "999";
	btn.style.padding = "0.5em";
	btn.style.fontSize = "1.5em";
	btn.style.background = "#222";
	btn.style.color = "#fff";
	btn.style.border = "none";
	btn.style.borderRadius = "50%";
	btn.style.cursor = "pointer";

	// Control de clic
	btn.addEventListener("click", () => {
		musicaActiva = !musicaActiva;

		if (audioFondo) audioFondo.muted = !musicaActiva;
		if (audioAmbiente) audioAmbiente.muted = !musicaActiva;

		btn.innerHTML = musicaActiva ? "🔊" : "🔇";
		btn.setAttribute("aria-label", musicaActiva ? "Silenciar música" : "Activar música");
		btn.setAttribute("title", musicaActiva ? "Silenciar música" : "Activar música");
	});

	document.body.appendChild(btn);
}

