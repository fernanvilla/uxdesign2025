/* ESTILOS GENERALES */
body {
  background-color: #000;
  margin: 0;
  padding: 0;
  font-family: 'typewriter','Georgia', serif;
  color: #000;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  
}

h1{
  color: #8B0000 
}


/* Contenedor de contenido centrado verticalmente y con proporci√≥n tipo p√°gina */
.passage {
  background-color: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  padding: 2em;
  width: 90%;
  max-width: 600px; 
  min-height: 70vh;
  border: 8px double #aaa;
  border-image: linear-gradient(to right, #ccc 0%, #999 50%, #ccc 100%);
  border-image-slice: 1;
  border-radius: 1em;
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.8);
  box-sizing: border-box;
  overflow: auto;
}
.texto {
  background-color: rgba(255, 255, 255, 0.6); /* Fondo semitransparente */
  backdrop-filter: blur(5px);         /* Desenfoque del fondo */
  -webkit-backdrop-filter: blur(5px); /* Compatibilidad con Safari */
  padding: 2em;
  max-width: 700px;
  margin: 3em auto;
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.8);
  border-radius: 0.5em;
  color: black;
}

.alerta {
  outline: 2px solid #8B0000;
  outline-offset: 4px;            /* Separaci√≥n del borde */     
  border-radius: 4px;       
}
/* Enlaces */
a {
  color: #8B0000 ;
  font-weight: bold;
  font-family: 'depres','Georgia'
}
a:hover {
  color: #333333;
  text-shadow: 0 0 8px #fff;
}
a:focus {
  outline: 2px solid #8B0000;     /* Color del borde al enfocarse */
  outline-offset: 4px;            /* Separaci√≥n del borde */
  background-color: #fff;         /* Fondo al seleccionar */
  color: #8B0000 !important;                    /* Color de texto */
  border-radius: 4px;             /* Bordes redondeados opcionales */
  padding: 2px 4px;               /* Espaciado visual */
}

/* Animaci√≥n de transici√≥n */
body {
  animation: fadeIn 1s ease-in-out;
}
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* IM√ÅGENES DENTRO DEL TEXTO */
.passage img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 2em auto;
