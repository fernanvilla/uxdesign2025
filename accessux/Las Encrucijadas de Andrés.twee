//Autoplay al recargar la pagina con diferentes opciones de interaccion

function intentarReproducirAudios() {
	if (audioFondo && audioFondo.paused) {
		audioFondo.play().catch(() => {});
	}
	if (audioAmbiente && audioAmbiente.paused) {
		audioAmbiente.play().catch(() => {});
	}
}

// Escucha cualquier tipo de interacci√≥n
function agregarEscuchadoresAutoplay() {
	const reactivar = () => {
		intentarReproducirAudios();
		document.removeEventListener("click", reactivar);
		document.removeEventListener("keydown", reactivar);
		document.removeEventListener("pointerdown", reactivar);
		document.removeEventListener("touchstart", reactivar);
	};

	document.addEventListener("click", reactivar);
	document.addEventListener("keydown", reactivar);
	document.addEventListener("pointerdown", reactivar);
	document.addEventListener("touchstart", reactivar);
}

agregarEscuchadoresAutoplay();


