const $uiBar = $('#ui-bar');
const $uiBarBody = $('#ui-bar-body');
let contentAdded = false;
let hotkeysDialog;

// Función para crear y abrir instructivo de atajos
function createHotkeysDialog() {
  hotkeysDialog = Dialog.create('Atajos');
  hotkeysDialog.append('\
	<table>\
		<caption>Lista de combinaciones de teclas para acceder a funcionalidades de la historia fácilmente</caption>\
		<thead>\
			<tr>\
				<th scope="col">Combinación</th>\
				<th scope="col">Función</th>\
			</tr>\
		</thead>\
		<tbody>\
			<tr>\
				<td><span>Ctrl + B</span></td>\
				<td>Mostrar o esconder barra lateral</td>\
			</tr>\
			<tr>\
				<td><span aria-label="ctrl + flecha izquierda"><span aria-hidden="true">Ctrl + ←</span></span></td>\
				<td>Ir a escena anterior</td>\
			</tr>\
			<tr>\
				<td><span aria-label="ctrl + flecha derecha"><span aria-hidden="true">Ctrl + →</span></span></td>\
				<td>Ir a escena siguiente (visitada)</td>\
			</tr>\
			<tr>\
				<td><span>Alt + C</span></td>\
				<td><em>Continuar</em> historia</td>\
			</tr>\
			<tr>\
				<td><span>Alt + R</span></td>\
				<td><em>Reiniciar</em> historia</td>\
			</tr>\
			<tr>\
				<td><span>Alt + A</span></td>\
				<td>Ver <em>Atajos</em></td>\
			</tr>\
			<tr>\
				<td><span>Alt + S</span></td>\
				<td>Activar o desactivar efectos de sonido</td>\
			</tr>\
			<tr>\
				<td><span>Alt + T</span></td>\
				<td>Activar o desactivar tema claro/oscuro</td>\
			</tr>\
			<tr>\
				<td><span>Escape</span></td>\
				<td>Salir de cuadro de diálogo</td>\
			</tr>\
		</tbody>\
	</table>\
	');
	hotkeysDialog.open();
}

// Añadir funcionalidades adicionales de la historia
$(document).on(':passagedisplay', function(event) {
  // Re-ubicar botón de audio
  const $soundToggle = $('#passages button.link-internal.macro-button:first-child');
  if (!$('#sound-toggle')[0]) {
    // Indicar funcionalidad para lector de pantalla
    $soundToggle.attr({
      'id': 'sound-toggle',
      'aria-label': 'habilitar sonido',
      'aria-pressed': 'true'
    });
    $uiBarBody.append($soundToggle);
    $soundToggle.on('click', function() {
      $(this).text(State.variables.audio ? '🔊' : '🔇');
    });
  } else {
    $soundToggle.remove();
  }
  
  // Ejecutar tras la carga inicial de todos los elementos
  if (!contentAdded) {
    // Etiquetar boton de ocultar barra lateral
    $('#ui-bar-toggle')
    	.removeAttr('title')
    	.attr({
      		'aria-label': 'ocultar barra lateral',
      		'aria-pressed': 'false'
    	});
    
    // Etiquetar botones de navegación de pasajes en barra lateral
    $('#history-backward, #history-forward').removeAttr('title');
    $('#history-backward').attr('aria-label', 'ir a escena anterior');
    $('#history-forward').attr('aria-label', 'ir a siguiente escena visitada');
    
    // Traducir botones de #menu
    $('#menu-item-continue a').text('CONTINUAR');
	$('#menu-item-saves').remove();
    $('#menu-item-restart a').text('REINICIAR');
    
    // Añadir botón de Atajos
    const $hotkeys = $('\
		<li id="menu-item-hotkeys">\
			<a tabindex="0" role="button">\
				ATAJOS\
			</a>\
		</li>\
	');
    $('#menu-core').append($hotkeys);
    const $hotkeysButton = $('#menu-item-hotkeys a');
    $hotkeysButton.on('click', createHotkeysDialog);
    $('#menu-item-hotkeys').on('keydown', function(event) {
      if (event.key === 'Enter' || event.key === ' ') $hotkeysButton.trigger('click');
    });
    
    // Indicar que no se debe volver a añadir todo lo anterior
    contentAdded = true;
  }
});

/* ===============================
   SWITCH DE TEMA CLARO/OSCURO ACCESIBLE
   =============================== */
$(document).on(':passagedisplay', function () {
  const $themeSwitch = $('#passages .theme-switch');

  // Mover el switch al menú lateral si no está ya
  if ($themeSwitch.length && !$('#theme-switch')[0]) {
    $themeSwitch.attr('id', 'theme-switch');
    $('#ui-bar-body').append($themeSwitch);

    const $toggle = $('#theme-toggle');

    // Atributos ARIA para lectores de pantalla
    $toggle.attr({
      'aria-label': 'Alternar tema claro u oscuro',
      'role': 'switch',
      'aria-checked': document.documentElement.getAttribute('data-theme') === 'dark'
    });

    // Evento cambio de tema
    $toggle.off('change').on('change', function () {
      toggleTheme();
    });
  } else {
    // Eliminar duplicados en la historia
    $themeSwitch.remove();
  }

  // Sincronizar estado del switch con el tema guardado
  const savedTheme = localStorage.getItem('theme') || 'light';
  document.documentElement.setAttribute('data-theme', savedTheme);

  const toggle = document.getElementById('theme-toggle');
  const label = document.querySelector('label[for="theme-toggle"]');

  if (toggle && label) {
    toggle.checked = (savedTheme === 'dark');
    label.classList.toggle('active', toggle.checked);

    // Actualizar atributo aria-checked
    toggle.setAttribute('aria-checked', toggle.checked);
  }
});

function toggleTheme() {
  const currentTheme = document.documentElement.getAttribute('data-theme');
  const newTheme = currentTheme === 'light' ? 'dark' : 'light';
  document.documentElement.setAttribute('data-theme', newTheme);
  localStorage.setItem('theme', newTheme);

  const toggle = document.getElementById('theme-toggle');
  const label = document.querySelector('label[for="theme-toggle"]');

  if (toggle && label) {
    toggle.checked = (newTheme === 'dark');
    label.classList.toggle('active', toggle.checked);

    // Actualizar aria-checked dinámicamente
    toggle.setAttribute('aria-checked', toggle.checked);
  }
}



/* ACCESIBILIDAD */

/* Navegación por teclado */

// Hotkeys
$(document).on('keydown', function(event) {
  const key = event.key;
  const ctrlKey = event.ctrlKey;
  const altKey = event.altKey;
  
  // Barra lateral (ampliar/minimizar)
  if (altKey && key === 'b') if (UIBar.isStowed()) UIBar.unstow(); else UIBar.stow();
  
  // Retroceder y Avanzar entre pasajes visitados (barra lateral)
  if (ctrlKey && key === 'ArrowLeft') $('#history-backward').trigger('click');
  if (ctrlKey && key === 'ArrowRight') $('#history-forward').trigger('click');
  
  // Continuar
  if (altKey && key === 'c') $('#menu-item-continue a').trigger('click');
  
  // Reiniciar
  if (altKey && key === 'r') $('#menu-item-restart a').trigger('click');
  
  // Atajos
  if (altKey && key === 'a') $('#menu-item-hotkeys a').trigger('click');
  
  // Sonido (activar/desactivar)
  if (altKey && key === 's') $('#sound-toggle').trigger('click');
  
  //Activar tema claro-oscuro
  if (altKey && key === 't') $('#theme-toggle').trigger('click');
  
  // Cerrar cuadro de diálogo abierto
  if (key === 'Escape' && Dialog.isOpen()) $('#ui-dialog-close').trigger('click');
});


/* Árbol de accesibilidad */

// Establecer lenguaje del documento como español
document.documentElement.lang = "es";

// Intercambiar orden de #story y #ui-bar
