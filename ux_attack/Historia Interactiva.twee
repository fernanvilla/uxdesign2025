});

/* ===============================
   SWITCH DE TEMA CLARO/OSCURO ACCESIBLE
   =============================== */
$(document).on(':passagedisplay', function () {
  const $themeSwitch = $('#passages .theme-switch');

  // Mover el switch al men√∫ lateral si no est√° ya
  if ($themeSwitch.length && !$('#theme-switch')[0]) {
    $themeSwitch.attr('id', 'theme-switch');
    $('#ui-bar-body').append($themeSwitch);

    const $toggle = $('#theme-toggle');

    // Atributos ARIA para lectores de pantalla
    $toggle.attr({
      'aria-label': 'Alternar tema claro u oscuro',
      'role': 'switch',
      'aria-checked': document.documentElement.getAttribute('data-theme') === 'dark'
    });

    // Evento cambio de tema
    $toggle.off('change').on('change', function () {
      toggleTheme();
    });
  } else {
    // Eliminar duplicados en la historia
    $themeSwitch.remove();
  }

  // Sincronizar estado del switch con el tema guardado
  const savedTheme = localStorage.getItem('theme') || 'light';
  document.documentElement.setAttribute('data-theme', savedTheme);

  const toggle = document.getElementById('theme-toggle');
  const label = document.querySelector('label[for="theme-toggle"]');

  if (toggle && label) {
    toggle.checked = (savedTheme === 'dark');
    label.classList.toggle('active', toggle.checked);

    // Actualizar atributo aria-checked
    toggle.setAttribute('aria-checked', toggle.checked);
  }
});

function toggleTheme() {
  const currentTheme = document.documentElement.getAttribute('data-theme');
  const newTheme = currentTheme === 'light' ? 'dark' : 'light';
  document.documentElement.setAttribute('data-theme', newTheme);
  localStorage.setItem('theme', newTheme);

  const toggle = document.getElementById('theme-toggle');
  const label = document.querySelector('label[for="theme-toggle"]');

  if (toggle && label) {
    toggle.checked = (newTheme === 'dark');
    label.classList.toggle('active', toggle.checked);

    // Actualizar aria-checked din√°micamente
    toggle.setAttribute('aria-checked', toggle.checked);
  }
}



/* ACCESIBILIDAD */

/* Navegaci√≥n por teclado */

// Hotkeys
$(document).on('keydown', function(event) {
  const key = event.key;
  const ctrlKey = event.ctrlKey;
  const altKey = event.altKey;
  
  // Barra lateral (ampliar/minimizar)
  if (altKey && key === 'b') if (UIBar.isStowed()) UIBar.unstow(); else UIBar.stow();
  
  // Retroceder y Avanzar entre pasajes visitados (barra lateral)
  if (ctrlKey && key === 'ArrowLeft') $('#history-backward').trigger('click');
  if (ctrlKey && key === 'ArrowRight') $('#history-forward').trigger('click');
  
  // Continuar
  if (altKey && key === 'c') $('#menu-item-continue a').trigger('click');
  
  // Reiniciar
  if (altKey && key === 'r') $('#menu-item-restart a').trigger('click');
  
  // Atajos
  if (altKey && key === 'a') $('#menu-item-hotkeys a').trigger('click');
  
  // Sonido (activar/desactivar)
  if (altKey && key === 's') $('#sound-toggle').trigger('click');
  
  //Activar tema claro-oscuro
  if (altKey && key === 't') $('#theme-toggle').trigger('click');
  
  // Cerrar cuadro de di√°logo abierto
  if (key === 'Escape' && Dialog.isOpen()) $('#ui-dialog-close').trigger('click');
});


